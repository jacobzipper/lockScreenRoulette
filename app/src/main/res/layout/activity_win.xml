<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/winLayout">

    <Button
        android:text=":'^("
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sadButton"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_gravity="center"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="GET A LIFE!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_below="@+id/winText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/winText"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relLayoutDos">

        <com.shaishavgandhi.loginbuttons.TwitterButton
            android:layout_width="75dp"
            app:roundedCorner="true"
            app:roundedCornerRadius="75dp"
            app:iconSize="30dp"
            android:layout_height="75dp"
            android:id="@+id/twitButton"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fbButton"
            android:layout_toEndOf="@+id/fbButton"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" />

        <com.shaishavgandhi.loginbuttons.FacebookButton
            android:layout_width="75dp"
            app:roundedCorner="true"
            app:roundedCornerRadius="70dp"
            app:iconSize="30dp"
            android:layout_height="75dp"
            android:id="@+id/fbButton"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <TextView
        android:text="Unlock phone to share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/sadButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />


</RelativeLayout>